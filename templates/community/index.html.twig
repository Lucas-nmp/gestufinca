{% extends 'base.html.twig' %}

{% block title %}{{ 'Comunidades'|trans }}{% endblock %}

{% block body %}
    <br>
    <br>
    <div class="table-wrapper">
        <h1>{{ 'Comunidades'|trans }}</h1>
        <div class="table-container">
            <a href="{{ path('app_community_new') }}" class="create-button">{{ 'Nueva comunidad'|trans }}</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>{{ 'Id'|trans }}</th>
                        <th>{{ 'Dirección'|trans }}</th>
                        <th>{{ 'Número'|trans }}</th>
                        <th>{{ 'Localidad'|trans }}</th>
                        <th>{{ 'Número de vecinos'|trans }}</th>
                        <th>{{ 'Acciones'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for community in communities %}
                    <tr>
                        <td>{{ community.id }}</td>
                        <td>{{ community.address }}</td>
                        <td>{{ community.number }}</td>
                        <td>{{ community.locality }}</td>
                        <td>{{ community.neighborsCount }}</td>
                        <td class="actions">
                            <a href="{{ path('app_community_edit', {'id': community.id}) }}" class="btn">Editar</a>

                            {{ include('community/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    
{% endblock %}
