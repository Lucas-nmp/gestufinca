{% extends 'base.html.twig' %}

{% block title %}{{ 'Usuarios'|trans }}{% endblock %}

{% block body %}
    <br>
    <br>
    <div class="table-wrapper">
        <h1>{{ 'Usuarios'|trans }}</h1>

        <div class="table-container">
            <a href="{{ path('app_user_new') }}" class="create-button">Create new</a>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
