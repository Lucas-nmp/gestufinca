{% extends 'base.html.twig' %}

{% block title %}Information{% endblock %}

{% block body %}
    <h1>Information</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ information.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ information.title }}</td>
            </tr>
            <tr>
                <th>Dare_information</th>
                <td>{{ information.dareInformation ? information.dareInformation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Body_information</th>
                <td>{{ information.bodyInformation }}</td>
            </tr>
            <tr>
                <th>Community</th>
                <td>{{ information.community }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_information_index') }}">back to list</a>

    <a href="{{ path('app_information_edit', {'id': information.id}) }}">edit</a>

    {{ include('information/_delete_form.html.twig') }}
