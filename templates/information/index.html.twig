{% extends 'base.html.twig' %}

{% block title %}Information index{% endblock %}

{% block body %}
    <h1>Information index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Dare_information</th>
                <th>Body_information</th>
                <th>Community</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information in information %}
            <tr>
                <td>{{ information.id }}</td>
                <td>{{ information.title }}</td>
                <td>{{ information.dareInformation ? information.dareInformation|date('Y-m-d') : '' }}</td>
                <td>{{ information.bodyInformation }}</td>
                <td>{{ information.community }}</td>
                <td>
                    <a href="{{ path('app_information_show', {'id': information.id}) }}">show</a>
                    <a href="{{ path('app_information_edit', {'id': information.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_information_new') }}">Create new</a>
{% endblock %}
