<section id="news" class="news-section">
    <h2>Ãšltimas noticias</h2>
    <div class="news-grid">
        {% for news in latestNews %}
            <div class="news-card">
                <h3>{{ news.title }}</h3>
                <span class="date">{{ news.newsDate ? news.newsDate|date('Y-m-d') : '' }}</span>
                <p>
                    {{ news.bodyNews|length > 400 
                        ? news.bodyNews|slice(0, 400) ~ '...'
                        : news.bodyNews 
                    }}
                </p>
            </div>
        {% else %}
            <p>No hay noticias disponibles.</p>
        {% endfor %}
    </div>
</section>

